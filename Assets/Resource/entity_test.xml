      </G_View>
    </G_TextView>
    <members>
      <enable_mouse_down_offset value="1" />
    </members>
  </G_Button>
  <G_TextView id="ziti_skill">
    <members>
      <text size="14" color="255,255,255" bordercolor="42,52,49" bordersize="2" style="bold" align="hcenter vcenter" string="技能" />
    </members>
    <G_View>
      <members>
        <color default="0,0,0" />
      </members>
    </G_View>
  </G_TextView>
  <!--魂格按钮-->
  <G_Button id="btn_carry">
    <G_TextView>
      <G_View>
        <members>
          <texture package="Srpg" id="Srpg/bg_carry" />
          <touchpad value="0,0,0,0" />
